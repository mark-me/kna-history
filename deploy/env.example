# Domain Configuration
DOMAIN_NAME=kna-historie.duckdns.org
EMAIL_ADDRESS=your-email@example.com

# Flask Application
SECRET_KEY=your-secret-key-here-generate-random-string
ADMIN_PASSWORD=change-this-admin-password

# Environment (production, development, testing)
FLASK_ENV=production
KNA_ENV=production

# MariaDB Configuration (KNA Data)
MARIADB_HOST=mariadb
MARIADB_DATABASE=kna
MARIADB_USER=kna
MARIADB_PASSWORD=your-db-password
MARIADB_ROOT_PASSWORD=your-root-password

# Flask-Login Users Database
# Can use same MariaDB or separate database
DATABASE_URL=mysql+mysqldb://kna:your-db-password@mariadb/kna_users

# Resources Directory (inside container)
DIR_RESOURCES=/data/resources/

# DuckDNS Configuration
DUCKDNS_SUBDOMAIN=kna-historie
DUCKDNS_TOKEN=your-duckdns-token

# Volume Locations (on host)
DIR_RESOURCES_HOST=/data/kna_resources
DIR_MARIADB=/data/mariadb
