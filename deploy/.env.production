# ============================================================================
# .env.production
# Production Environment Configuration
# ============================================================================

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# Database Paths (absolute paths recommended)
SQLITE_KNA_PATH=/data/kna_history.db
SQLITE_USERS_PATH=/data/users.db

# Resources Directory
DIR_RESOURCES=/data/resources/

# Admin Password (MUST change!)
ADMIN_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Security: Require login for all routes
REQUIRE_LOGIN=true

# Performance: Disable SQL echo in production
SQL_ECHO=false
