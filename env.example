# KNA Application Configuration
# Copy this to .env and update values as needed

# Environment (development, production, testing)
FLASK_ENV=production
KNA_ENV=production

# Flask Secret Key (generate a random string for production)
SECRET_KEY=your-secret-key-here-change-this-in-production

# MariaDB Configuration (KNA Data Database)
MARIADB_HOST=mariadb
MARIADB_USER=root
MARIADB_PASSWORD=kna-toneel
MARIADB_DATABASE=kna

# Flask-Login Users Database
# Can use the same MariaDB or a separate database
DATABASE_URL=mysql+mysqldb://root:kna-toneel@mariadb/kna_users
# For SQLite in development: DATABASE_URL=sqlite:///dev.db

# Resources Directory
DIR_RESOURCES=/data/resources/

# Admin User (for initial setup)
ADMIN_PASSWORD=admin2026!

# Optional: Logging Level
LOG_LEVEL=INFO
